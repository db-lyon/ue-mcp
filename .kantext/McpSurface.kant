McpModes:
  SpaceBond@Offline:
    meaning: Server parses raw .uasset/.umap binaries via UAssetAPI. No editor connection. Available without Unreal Engine installed.
    mode:
      Convert: Signal
      value: 0.0
    fidelity:
      Convert: Signal
      value: 0.5
    capabilities: Read asset structure and properties. Search and list assets. Parse Blueprints. Parse DataTables. Read C++ headers for UE macros. Read config/INI files. Export to JSON.
    limitations: Cannot resolve generic pin types after compilation. Cannot read inherited properties from C++ parents. Cannot see runtime values. Cannot write.
    tools_available: set_project, get_status, get_project_info, read_asset, read_asset_properties, list_assets, search_assets, asset_to_json, read_blueprint, list_blueprint_variables, list_blueprint_functions, read_blueprint_graph, read_datatable, read_config, search_config, list_config_tags, read_cpp_header, read_module, list_modules, search_cpp

  SpaceBond@Live:
    meaning: Server connected to running Unreal Editor via WebSocket bridge on ws://localhost:9877. Full read/write with engine reflection.
    mode:
      Convert: Signal
      value: 1.0
    fidelity:
      Convert: Signal
      value: 1.0
    capabilities: Everything offline can do, plus authoritative type reflection, write operations, Blueprint compilation with error feedback, PIE control and runtime introspection, GameplayTag enumeration, console commands, asset saving with undo.
    additional_tools: reflect_class, reflect_struct, reflect_enum, list_classes, list_gameplay_tags, list_node_types, search_node_types, get_world_outliner, place_actor, delete_actor, get_actor_details, move_actor, read_material, list_material_parameters, set_material_parameter, create_material_instance, read_anim_blueprint, read_anim_montage, read_anim_sequence, read_blendspace, list_anim_assets, add_anim_notify, read_widget_tree, get_widget_details, set_widget_property, list_widget_blueprints, read_widget_animations, undo, redo, editor_execute, set_property, compile_blueprint, create_blueprint, add_blueprint_variable, add_blueprint_node, connect_blueprint_pins, save_asset, play_in_editor, get_runtime_value
    ğŸª RequiresPlugin: /McpBridge
        connection: depends_on

McpBridge:
  SpaceBond@Plugin:
    meaning: UE-side Python plugin hosting the WebSocket server. Runs inside the editor as a daemon thread.
    host: localhost
    port: 9877
    protocol: JSON-RPC over WebSocket
    language: Python (UE embedded interpreter)
    dependency: websockets pip package

  SpaceBond@Setup:
    meaning: Installation and activation steps.
    prerequisite: Python Editor Script Plugin enabled in the UE project.
    install_websockets: pip install websockets using UE's bundled Python
    copy_plugin: Copy plugin/ue_mcp_bridge/ to <Project>/Content/Python/
    manual_start: In UE Python console â€” import ue_mcp_bridge; ue_mcp_bridge.start()
    auto_start: Add startup_script.py path to DefaultEngine.ini under PythonScriptPluginSettings

